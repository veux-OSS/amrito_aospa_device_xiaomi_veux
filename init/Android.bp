    name: "init.target.rc",
    src: "init.target.rc",
    sub_dir: "init/hw",
    vendor: true,
}

prebuilt_etc {
    name: "init.veux.perf.rc",
    src: "init.veux.perf.rc",
    sub_dir: "init",
    vendor: true,
}
